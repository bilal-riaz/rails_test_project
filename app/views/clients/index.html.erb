<% if is_admin? || is_manager? %>
  <%= link_to 'Create Client', new_client_path, class: 'btn btn-success' %>
<%end%>
<h1>Listing Clients</h1>
<div class='container'>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>City</th>
        <th>Email</th>
        <th>Country</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td ><%= client.name %></td>
          <td ><%= client.city %></td>
          <td ><%= client.email%></td>
          <td ><%= client.country %></td>
          <% if is_admin? || is_manager? %>
            <td><%= link_to  client_path(client), class: 'cols-md-6' do %>
              <i class="fa fa-eye"></i>
            <% end %></td>
            <td>
                <%= link_to 'Edit Client Profile', edit_client_path(client), class: 'btn btn-primary' %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
