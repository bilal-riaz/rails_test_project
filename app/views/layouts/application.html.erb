<!DOCTYPE html>
<html lang="en">
  <head>
    <title>ProjectManagementSystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <strong><a class="navbar-brand" href="#">Project Management System</a></strong>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <strong>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li>
                <%= link_to 'Home' %>
              </li>
            <!--<% if is_manager? %>
              <li><%= link_to 'Clients', root_path %></li>
              <li><%= link_to fa_icon('plus-circle', text: 'Create Client'), new_client_path %></li>
            <% end %>-->
            <% if is_admin? || is_manager? || is_developer?%>
              <% if is_admin?%>
                <li><%= link_to 'Users', admin_users_path %></li>
              <% end %>
              <li><%= link_to 'Clients', root_path %></li>
                <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= current_user.email %><span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to fa_icon('edit', text: 'Edit Profile'), edit_user_registration_path %>
                    </li>
                    <li>
                      <%= link_to fa_icon('sign-out', text: 'Logout'),  destroy_user_session_path, method: :delete %>
                    </li>
                  </ul>
                </li>
            <% end %>
            <% else %>
              <li> <%= link_to 'Sign Up',  new_user_registration_path %><li>
            <% end %>
          </ul>
        </strong>
      </div>
    </div>
  </nav>
    <div class ="container">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>

      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %> 
      <%= yield %>
    </div>
  </body>
</html>
