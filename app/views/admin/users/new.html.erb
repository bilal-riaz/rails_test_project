    <%= form.label :password %>
    <%= form.password_field :password ,class: 'form-control'%><br>
  </p>

  <p>
    <%= form.label :password_confimation %><br>
    <%= form.password_field :password_confirmation, class: 'form-control'%><br>
  </p>

  <p>
    <%= form.select 'type', options_for_select([["Manager","Manager"],["Developer","Developer"]]) %><br>
  </p>
 
  <p>
    <%= form.submit class: 'btn btn-primary' %><br>
  </p>
